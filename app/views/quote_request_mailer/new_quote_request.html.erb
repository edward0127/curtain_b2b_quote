<h2 style="margin: 0 0 6px; font-size: 24px; line-height: 1.25; color: #123447;">Quote Request <%= @quote_request.quote_number %></h2>
<p class="muted" style="margin: 0 0 18px; font-size: 14px;">
  Submitted by <strong style="color: #123447;"><%= @customer.email %></strong> on <%= l(@quote_request.created_at, format: :long) %>.
</p>

<table role="presentation" width="100%" style="border: 1px solid #d9e5ec; border-radius: 10px; margin-bottom: 16px; background-color: #f9fcfe;">
  <tr>
    <td style="padding: 12px 14px; border-bottom: 1px solid #d9e5ec; width: 45%; color: #4d6575; font-size: 13px;">Customer Reference</td>
    <td style="padding: 12px 14px; border-bottom: 1px solid #d9e5ec; font-size: 14px; color: #123447;"><strong><%= @quote_request.customer_reference.presence || "N/A" %></strong></td>
  </tr>
  <tr>
    <td style="padding: 12px 14px; border-bottom: 1px solid #d9e5ec; color: #4d6575; font-size: 13px;">Template</td>
    <td style="padding: 12px 14px; border-bottom: 1px solid #d9e5ec; font-size: 14px; color: #123447;"><strong><%= @quote_request.quote_template.heading %></strong></td>
  </tr>
  <tr>
    <td style="padding: 12px 14px; border-bottom: 1px solid #d9e5ec; color: #4d6575; font-size: 13px;">Valid Until</td>
    <td style="padding: 12px 14px; border-bottom: 1px solid #d9e5ec; font-size: 14px; color: #123447;"><strong><%= l(@quote_request.valid_until, format: :long) %></strong></td>
  </tr>
  <tr>
    <td style="padding: 12px 14px; border-bottom: 1px solid #d9e5ec; color: #4d6575; font-size: 13px;">Status</td>
    <td style="padding: 12px 14px; border-bottom: 1px solid #d9e5ec; font-size: 14px; color: #123447;"><strong><%= @quote_request.status.humanize %></strong></td>
  </tr>
  <tr>
    <td style="padding: 12px 14px; color: #4d6575; font-size: 13px;">Total</td>
    <td style="padding: 12px 14px; font-size: 14px; color: #123447;"><strong><%= number_to_currency(@quote_request.total, unit: "#{@quote_request.currency} ") %></strong></td>
  </tr>
</table>

<table role="presentation" width="100%" style="border-collapse: collapse; margin-bottom: 16px;">
  <thead>
    <tr>
      <th align="left" style="padding: 8px; border-bottom: 1px solid #d9e5ec; color: #4d6575; font-size: 12px;">Product</th>
      <th align="left" style="padding: 8px; border-bottom: 1px solid #d9e5ec; color: #4d6575; font-size: 12px;">Dimensions</th>
      <th align="left" style="padding: 8px; border-bottom: 1px solid #d9e5ec; color: #4d6575; font-size: 12px;">Qty</th>
      <th align="left" style="padding: 8px; border-bottom: 1px solid #d9e5ec; color: #4d6575; font-size: 12px;">Unit</th>
      <th align="left" style="padding: 8px; border-bottom: 1px solid #d9e5ec; color: #4d6575; font-size: 12px;">Line Total</th>
    </tr>
  </thead>
  <tbody>
    <% @quote_request.quote_items.each do |item| %>
      <tr>
        <td style="padding: 8px; border-bottom: 1px solid #edf3f7; font-size: 13px; color: #123447;"><%= item.product.name %></td>
        <td style="padding: 8px; border-bottom: 1px solid #edf3f7; font-size: 13px; color: #123447;">
          <% if item.product.per_square_meter? %>
            <%= item.width %> x <%= item.height %> cm
          <% else %>
            Unit priced
          <% end %>
        </td>
        <td style="padding: 8px; border-bottom: 1px solid #edf3f7; font-size: 13px; color: #123447;"><%= item.quantity %></td>
        <td style="padding: 8px; border-bottom: 1px solid #edf3f7; font-size: 13px; color: #123447;"><%= number_to_currency(item.unit_price, unit: "#{@quote_request.currency} ") %></td>
        <td style="padding: 8px; border-bottom: 1px solid #edf3f7; font-size: 13px; color: #123447;"><%= number_to_currency(item.line_total, unit: "#{@quote_request.currency} ") %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<p style="margin: 0 0 8px; font-size: 13px; color: #4d6575; text-transform: uppercase; letter-spacing: 0.05em;"><strong>Notes</strong></p>
<div style="padding: 12px 14px; border-radius: 10px; border: 1px solid #d9e5ec; background-color: #ffffff; color: #123447; font-size: 14px; line-height: 1.45;">
  <%= simple_format(@quote_request.notes.presence || "No additional notes provided.") %>
</div>

<p style="margin: 20px 0 0;">
  <%= link_to "Open Workflow", admin_quote_requests_url, style: "display:inline-block; padding:10px 16px; border-radius:999px; background:#0b84b3; color:#ffffff; font-weight:600; text-decoration:none; font-size:13px;" %>
</p>
