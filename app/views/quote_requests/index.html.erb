<section class="hero hero--compact">
  <div>
    <p class="eyebrow">Quotes</p>
    <h2>My Quote Requests</h2>
    <p class="lead">Track quote workflow status, totals, and generated quote documents.</p>
  </div>
  <%= link_to "Build New Quote", new_quote_request_path, class: "button button--primary" %>
</section>

<section class="panel">
  <div class="table-wrap">
    <table class="data-table">
      <thead>
        <tr>
          <th>ID</th>
          <th>Quote #</th>
          <th>Items</th>
          <th>Total</th>
          <th>Status</th>
          <th>Template</th>
          <th>Created</th>
        </tr>
      </thead>
      <tbody>
        <% @quote_requests.each do |quote| %>
          <tr>
            <td><%= link_to quote.id, quote_request_path(quote) %></td>
            <td><%= quote.quote_number %></td>
            <td><%= quote.line_items_count %></td>
            <td><%= number_to_currency(quote.total, unit: "#{quote.currency} ") %></td>
            <td><span class="status-pill status-pill--<%= quote.status %>"><%= quote.status.humanize %></span></td>
            <td><%= quote.quote_template.heading %></td>
            <td><%= l(quote.created_at, format: :short) %></td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>
</section>
