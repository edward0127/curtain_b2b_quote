<% if pricing_rule.errors.any? %>
  <div class="flash flash--alert">
    <strong><%= pluralize(pricing_rule.errors.count, "error") %> prevented saving:</strong>
    <ul>
      <% pricing_rule.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
    </ul>
  </div>
<% end %>

<%= form_with model: [ :admin, product, pricing_rule ] do |form| %>
  <div class="form-grid">
    <div class="field">
      <%= form.label :name %>
      <%= form.text_field :name, required: true %>
    </div>
    <div class="field">
      <%= form.label :priority %>
      <%= form.number_field :priority, min: 0, required: true %>
    </div>
    <div class="field">
      <%= form.label :adjustment_type %>
      <%= form.select :adjustment_type, PricingRule.adjustment_types.keys.map { |value| [ value.humanize, value ] } %>
    </div>
    <div class="field">
      <%= form.label :adjustment_value %>
      <%= form.number_field :adjustment_value, step: 0.01, required: true %>
    </div>
    <div class="field">
      <%= form.label :min_area, "Min Area (sqm)" %>
      <%= form.number_field :min_area, step: 0.01 %>
    </div>
    <div class="field">
      <%= form.label :max_area, "Max Area (sqm)" %>
      <%= form.number_field :max_area, step: 0.01 %>
    </div>
    <div class="field">
      <%= form.label :min_quantity %>
      <%= form.number_field :min_quantity, min: 1 %>
    </div>
    <div class="field">
      <%= form.label :max_quantity %>
      <%= form.number_field :max_quantity, min: 1 %>
    </div>
    <div class="field field--full">
      <label>
        <%= form.check_box :active %>
        Active rule
      </label>
    </div>
  </div>

  <div class="actions">
    <%= form.submit class: "button button--primary" %>
    <%= link_to "Back to Product", admin_product_path(product), class: "button button--secondary" %>
  </div>
<% end %>
